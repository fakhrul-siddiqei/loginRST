<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/gradient"
    android:padding="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USER LOGIN"
        android:textSize="21sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingVertical="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#3C4B65"/>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:background="@drawable/a"
        android:paddingHorizontal="10dp"
        android:paddingVertical="13dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#494949"
        android:layout_marginVertical="10dp"
        android:hint="Enter Username" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/userPass"
        android:layout_width="match_parent"
        android:background="@drawable/a"
        android:paddingHorizontal="10dp"
        android:paddingVertical="13dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#494949"
        android:layout_marginVertical="10dp"
        android:hint="Enter Password" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:fontFamily="@font/poppins_semibold"
        android:text="LOGIN"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/forgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="forgot password?"
        android:textSize="14sp"
        android:textAlignment="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#6A7E9F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="FAQ"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:drawableTop="@drawable/ic_baseline_live_help_24"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#3A3A3A"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"

            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:drawableTop="@drawable/ic_baseline_local_library_24"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#3A3A3A"/>
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="HELPLINE"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:drawableTop="@drawable/ic_baseline_call_24"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#3A3A3A"/>


    </LinearLayout>
</LinearLayout>